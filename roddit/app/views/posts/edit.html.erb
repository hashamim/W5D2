        <input type="text" name="title" value="<%= @post.title %>">
    </label>
    <label>Url
        <input type="text" name="url" value=<%= @post.url %>>
    </label>
    <label>content
        <input type="text" name="content" value=<%= @post.content %>>
    </label>
    <input type="submit" name="Create Sub">
</form>